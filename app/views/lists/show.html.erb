<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card p-4">
        <h2 class="mb-4"><%= @list.name %></h2>
        <%= link_to "Back to lists",  lists_path, class: "btn btn-primary col-3 mt-3" %>
        <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-primary col-3 mt-3"%>
        <h2 class="mb-4 text-center">Movies</h2>
          <ul>
            <% @list.movies.each do |movie| %>
              <li>
              <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
                <p><%= movie.title %></p>
                <p><%= movie.overview %></p>
                <%= image_tag "#{movie.poster_url}", alt: "Movie poster", width: 200 %>
                <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
              </li>
              <% end %>
          </ul>
      </div>
    </div>
  </div>
</div>
