<div class="container p-5 mt-10">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card p-4">
        <h1 class="mb-4 text-center">New List</h1>
        <%= simple_form_for @list do |f| %>
          <div class="form-group">
            <%= f.input :name, label: "List Name", input_html: { class: "form-control" }, label_html: { class: "form-label" } %>
          </div>
          <div class="form-group">
            <%= f.input :photo, as: :file%>
          </div>
          <div class="text-center">
            <%= f.submit "Submit List", class: "btn btn-primary mt-3" %>
          </div>
        <% end %>
        <div class="text-center mt-3">
          <%= link_to "Back to lists", root_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
