<div class="container p-5 mt-10">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card p-4">
        <h1 class="mb-4 text-center">New Bookmark</h1>
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <div class="form-group">
            <%= f.input :comment %>
            <%= f.association :movie %>
          </div>
          <div class="text-center">
            <%= f.submit "Submit Bookmark", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
